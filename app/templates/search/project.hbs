<div>
  <img src="{{project.image}}" style="width: 100px; height: 100px;" align="middle">
  <div style=" margin-bottom: 40px">
    <h2>{{project.name}}</h2>
    <h3 style=" display: inline">About:</h3>
    <p>{{project.description}}</p>
  </div>
  <div>
    <p style=" margin-bottom: 40px">
      <strong>Collaborators:</strong>
    </p>
    {{#each project.collaborators as |member|}}
      {{#each users as |user|}}
        {{#if (compare-values user.id member)}}
          {{#link-to "search.profile" member}}
            <article style=" margin-bottom: 20px">
              <img src="{{user.image}}" style="width: 100px; height: 100px;" align="middle">
              <strong>{{user.name}}</strong>
            </article>
          {{/link-to}}
        {{/if}}
      {{/each}}
    {{/each}}
  </div>
</div>
