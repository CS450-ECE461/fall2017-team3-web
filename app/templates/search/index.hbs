{{material-design-icon
  name='search'
  class="search-icon"}}

{{input
  autofocus = true
  placeholder = "Search by skills"
  class = "search-text"
  value=searchParam
  key-up = (action "search" searchParam (if toggleValue "project" "user"))}}

{{#each results as |result|}}
  {{#search-result
    isUser = (if toggleValue false true)
    page = result
    name = result.name
    rating = result.rating
    description = result.description
    skills = result.skills}}
  {{/search-result}}
{{/each}}

{{x-toggle
  offLabel = "USERS"
  onLabel = "PROJECTS"
  value = toggleValue
  onToggle = (action (mut toggleValue))
  theme = "skewed"
  size = "medium"}}
{{outlet}}